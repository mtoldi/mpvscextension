{
  "name": "esp-flasher",
  "displayName": "Soldered MicroPython Helper",
  "description": "Flash MicroPython firmware to ESP boards using esptool.py",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "espFlasher.flashFirmware",
        "title": "Flash Firmware (.bin)"
      },
      {
        "command": "espFlasher.uploadPython",
        "title": "Upload Python File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "espFlasherView",
          "title": "Soldered MicroPython Helper",
          "icon": "resources/mp2.png"
        }
      ]
    },
    "views": {
      "espFlasherView": [
        {
          "type": "webview",
          "id": "espFlasherWebview",
          "name": "",
          "icon": "resources/mp.png"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.100.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
